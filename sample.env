# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Next.js Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Application Configuration
NODE_ENV=development
PORT=3000

# CORS Configuration (comma-separated for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000

# Jekyll Container Configuration
DOCKER_COMPOSE_PATH=./docker-compose.yml
PROJECTS_DIR=./projects
TEMPLATES_DIR=./templates

# WebSocket Configuration
WS_PORT=8080

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AI_MAX=10
RATE_LIMIT_SITE_CREATION_MAX=5

# Security Configuration
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Optional: Database Configuration (if you want to persist data)
# DATABASE_URL=postgresql://username:password@localhost:5432/jekyll_studio
# MONGODB_URI=mongodb://localhost:27017/jekyll_studio

# Optional: File Storage Configuration
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=jekyll-studio-files

# Optional: Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Debug Configuration
DEBUG=jekyll-studio:*
LOG_LEVEL=info